<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_app"
            android:tint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:contentDescription="@string/app_name" />

        <TextView
            android:textSize="25sp"
            android:text="@string/setting"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_35"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_50"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_70"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_90"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_110"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_120"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/mmk_125"
        layout="@layout/result_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

    <include android:id="@+id/fee"
        layout="@layout/result_view"/>

</LinearLayout>